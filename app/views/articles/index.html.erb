<h1>Articles</h1>
<h1>¡Hola, Rails!</h1>
<p>😁<p> 
<ul>
  <% @articles.each do |article| %>
    <li>
        Título del <%= article.id %>°: <%= article.title %> - Cuerpo: <%= article.body %>
    </li>
  <% end %>
</ul>

<h1>Artículos</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
